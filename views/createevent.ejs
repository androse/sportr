<% include header %>
<body>
	<% include navbar %>
	<div class="container content">
		<h1 class="white header"> Create Event </h1>

		<form role="form" action="/newevent" method="post" id="eventForm">
			<div class="form-group">
				<label for="eventName">Event Name:</label>
				<input type="text" maxlength="24" class="form-control" id="eventName" placeholder="Enter an Event Name" name="eventname">
			</div>

			<div class="form-group">
				<label for="eventDescription">Event Description:</label>
				<textarea form="eventForm" rows="2" class="form-control" id="eventDescription" placeholder="Enter a Brief Event Description" name="eventdescription"></textarea>
			</div>
			
			<div class="form-group">
				<label for="eventLocation">Event Location:</label>
				<input type="text" class="form-control" id="eventLocation" placeholder="Enter a Location" name="eventlocation">
			</div>
			
			<div class="form-group">
				<label for="">Date and Time:</label>
				<input type="datetime-local" class="form-control" id="eventDateTime" name="eventdatetime">
			</div>
			
			<div class="form-group">
				<label for="eventSport">Sport:</label>
				<select class="form-control" id="eventSport" name="eventsport">
					<% for (var i = 0; i < sports.length; i++) { %>
						<option value="<%= sports[i].Sname %>"><%= sports[i].Sname%></option>
					<%	} %>
				</select>
			</div>

