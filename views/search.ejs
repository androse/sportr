<% include header %>
<body>
	<% include navbar %>
	
	<div class="container content">
		<h1 class="white header"> Search for Events</h1>
		
		<p><br></p>
		
		<form role="form" action="/searchSport" method="post" id="searchSportForm">
			<div class="form-group">
				<label for="searchSport">Sport:</label>
				
				<select class="form-control" id="searchSport" name="searchsport">
					<% for (var i = 0; i < sports.length; i++) { %>
						<option value="<%= sports[i].Sname %>"><%= sports[i].Sname%></option>
					<%	} %>	
				</select>			
			</div>
				
			<button type="submit" class="btn btn-primary form-control" id="submitsportsearch">Search by Sport</button>	
		</form>
		
		<p><br></p>

		<form role="form" action="/searchLocation" method="post" id="searchLocationForm">
			<div class="form-group">
				<label for="location">Location:</label>
				
				<input type="text" maxlength="24" class="form-control" id="location" placeholder="Enter a desired location..." name="locationName">
			</div>
				
			<button type="submit" class="btn btn-primary form-control" id="submitlocationsearch">Search by Location</button>	
		</form>
		
		<p><br></p>
		
		<form role="form" action="/searchDate" method="post" id="searchDateForm">
			<div class="form-group">
				<label for="date">Date:</label>

				<input type="text" maxlength="0" class="form-control" id="datepicker" placeholder="Select the desired date..." name="dateEntered" readonly>
			</div>
				
			<button type="submit" class="btn btn-primary form-control" id="submitdatesearch">Search by Date</button>	
		</form>
	</div>
	<% include js %>
	<script src="js/search.js"></script>
	<link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
	<script src="//code.jquery.com/jquery-1.9.1.js"></script>
	<script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
	<script>
		$(function() {
			$( "#datepicker" ).datepicker({
				minDate: 0,
			});	
		});
	</script>
</body>
</html>
